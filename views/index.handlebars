
<div class="jumbotron">
  <h1 class=" main-Title text-center">Fresh Burger</h1>
  <p class="tm text-center">Enjoy Our Burger That Are Made From Scratch.</p>
</div>
<div class = container>
      {{#each burgers}}
      {{#unless this.devoured}}
      <li>
        <span class="burgers">
          {{this.id}}
          {{this.burger_name}}
        </span>
        <span id="devourIt">
          <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="true">
            <button class="devour-button" type="submit">Devour it!</button>
          </form>
        </span>
      </li>
      {{/unless}}
      {{/each}}
 
    <ul>
      {{#each burgers}}
      {{#if this.devoured}}
      <li>
        {{this.id}}
        {{this.burger_name}}
      </li>
      {{/if}}
      {{/each}}
    </ul>
    <form class="create" action="/" method="POST">
      <div class="form-group">
        <textarea id="createBurger" placeholder="type the name of the burger here please." rows="3" class="col-sm-4" name="burger_name"></textarea>
      </div>

      <button type="submit" id="submit3" >Submit</button>
    </form>

  </section>
  </div>
</div>
